{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API: Development",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "api\\app.py",
                "FLASK_ENV": "Development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--port", "5555"
            ],
            "jinja": true
        }
    ]   
}